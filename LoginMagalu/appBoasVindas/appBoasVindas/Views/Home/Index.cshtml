@model appBoasVindas.Models.User;


@{
    ViewData["Title"] = "Home Page";
}
<div class="container"><br /><br />
<div class="text-center">

    @if (!string.IsNullOrEmpty(ViewBag.Erro))
{
    <h4 style="color:red;font-weight:600;">
        @ViewBag.Erro.ToString()
    </h4>
}


  
     <div class="card text-center">
  <div class="card-header">

  </div>
  
  <div class="card" style="margin-left: 37%;width:18rem;">
  <img src="~/css/login.jpg" class="card-img-top" alt="...">
  <div class="card-body">
   
  </div>
</div>
<div class="card-body">
   @using(Html.BeginForm("Login", "Home", FormMethod.Post, new { autocomplete="off" })){
    <label>Usuário:</label> 
    @Html.TextBoxFor(x=>x.nome) 

    <label>Senha:</label> 
      @Html.PasswordFor(x=>x.senha) 

    <button  class="btn btn-primary" type="submit">Enviar</button>

}


   
  
  </div>
</div>


